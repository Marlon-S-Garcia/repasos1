<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="repasos1.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry x:Name="txtUsuario" Placeholder="Ingrese el Uruario"/>
        <Entry x:Name="txtContrasena" Placeholder="Ingrese la Contraseña" IsPassword="True"/>

        <Button x:Name="btnAbrir" Text="Ingresar" Clicked="btnAbrir_Clicked"/>



    </StackLayout>

</ContentPage>
